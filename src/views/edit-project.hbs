<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/project.css" />
    <link rel="stylesheet" href="../assets/nav.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>{{addTitle}}</title>
  </head>

  <body>
    <div class="bg-light p-2">
      <nav class="container navbar navbar-expand-sm navbar-light">
        <div class="container-fluid">
          <a href="/">
            <img
              src="../assets/icon/du.png"
              alt="download"
              width="45px"
              height="40px"
            />
          </a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-4">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/add-project">
                {{#if isLogin}}
                Add My Project
                {{else}}
                My Project
                {{/if}}
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/testimoni">Testimonial</a>
              </li>
            </ul>
            <div>
              {{#if isLogin}}
                    <a href="#" class="me-3 fw-bold text-danger" style="text-decoration: none;">Hello, {{user}}</a>
                    <a href="/logout" style="text-decoration: none;">
                        <button class="btn btn-danger">
                            Logout
                        </button>
                    </a>
                    {{else}}
                    <a href="/register" style="text-decoration: none;">
                        <button class="btn btn-danger">
                            Register
                        </button>
                    </a>
                    <a href="/login" class="me-3" style="text-decoration: none;">
                        <button class="btn btn-outline-danger">
                            Login
                        </button>
                    </a>
              {{/if}}
              <a href="/contact" style="text-decoration: none;">
                <button class="btn btn-dark">
                  Contact
                </button>
              </a>
            </div>
          </div>
          <i
            class="fa-solid fa-bars fa-2x"
            style="cursor: pointer;"
            id="hamburger-button"
            onclick="openHamburger()"
          >
          </i>
        </div>
      </nav>

      <div
        id="hamburger-navbar-container"
        class="hamburger-navbar-container hidden"
      >
        <a class="hamburger-navbar-link" href="/">Home</a>
        <a
          class="hamburger-navbar-link"
          href="#"
          style="background-color: orangered;"
        >Add My Project</a>
        <a class="hamburger-navbar-link" href="/testimoni">Testimonial</a>
        <a class="hamburger-navbar-link" href="/register">Register</a>
        <a class="hamburger-navbar-link" href="/login">Login</a>
        <a class="hamburger-navbar-link" href="/contact">Contact</a>
      </div>
    </div>

    <div style=" background-color: #d4d4d4">
      <div class="container">
        <div class="card" style="border: none; background-color: #d4d4d4">
          <h1 class="fw-bold">
            EDIT MY PROJECT
          </h1>
          <form action="/edit-project/{{data.id}}" method="POST" enctype="multipart/form-data">
            <div>
              <label for="name">Project Name</label>
              <input
                id="name"
                type="text"
                placeholder="Name"
                id="name"
                class="form-control"
                name="name"
                value="{{data.name}}"
              />
            </div>
            <div class="row mt-2">
              <div class="col mt-2">
                <label for="start-date">Start Date</label>
                <input
                  id="start-date"
                  type="date"
                  placeholder="Start Date"
                  id="start-date"
                  class="form-control"
                  name="startDate"
                  value="{{data.start_date}}"
                />
              </div>
              <div class="col mt-2">
                <label for="end-date">End Date</label>
                <input
                  id="end-date"
                  type="date"
                  placeholder="End Date"
                  id="end-date"
                  class="form-control"
                  name="endDate"
                  value="{{data.end_date}}"
                />
              </div>
            </div>

            <div class="mt-2">
              <label for="phone">Description</label>
              <textarea class="form-control" name="desc" id="desc">{{data.description}}</textarea>
            </div>
            <label for="technologies" class="mt-2">Technologies</label>
            <div class="form-check">
              <div class="checkbox-form">
                <div class="item-check">
                  <div>
                    <input
                      type="checkbox"
                      id="html"
                      name="technologies"
                      value="html"
                    />
                    <label for="html">HTML</label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      id="react"
                      name="technologies"
                      value="react"
                    />
                    <label for="react">React JS</label>
                  </div>
                </div>
                <div class="item-check">
                  <div>
                    <input
                      type="checkbox"
                      id="css"
                      name="technologies"
                      value="css"
                    />
                    <label for="css">CSS</label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      id="javascript"
                      name="technologies"
                      value="javascript"
                    />
                    <label for="javascript">JavaScript</label>
                  </div>
                </div>

              </div>
            </div>

            <div class="mt-2">
              <label for="image" class="form-label">Upload Image</label>
              <input
                style="background-color: #fff;"
                type="file"
                id="image"
                name="image"
                class="form-control"
              />
            </div>

            <div class="mt-3">
              <button type="submit" class="btn btn-dark float-end">
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>


        {{! <div
          id="project-content"
          class="d-flex flex-wrap justify-content-center"
        >
          <!-- dynamic content -->
          
        </div> }}
      </div>
    </div>
    <script src="../assets/js/nav.js"></script>
    <script src="../assets/js/project.js"></script>
    <script
      defer
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"
    ></script>

     <script>
        document.addEventListener("DOMContentLoaded", function () {
            const selectedTechs = '{{data.technologies}}';
            const htmlCheckbox = document.getElementById("html");
            const reactCheckbox = document.getElementById("react");
            const cssCheckbox = document.getElementById("css");
            const javascriptCheckbox = document.getElementById("javascript");

            htmlCheckbox.checked = selectedTechs.includes('html');
            reactCheckbox.checked = selectedTechs.includes('react');
            cssCheckbox.checked = selectedTechs.includes('css');
            javascriptCheckbox.checked = selectedTechs.includes('javascript');
        });
    </script>
    
  </body>

</html>